<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="font-sans antialiased text-slate-800 bg-slate-50">
    <%- include('partials/auth-guard') %>
    <%- include('partials/navbar') %>

    <!-- Header Section -->
    <div class="doctors-page-header">
        <!-- Blobs -->
        <div class="header-blobs">
            <div class="blob-1"></div>
            <div class="blob-2"></div>
        </div>
        
        <div class="max-w-7xl mx-auto px-4 relative z-10 text-center">
            <h1 class="header-title text-3xl md:text-5xl mb-6">Find Your Specialist</h1>
            <p class="header-subtitle mb-8">Book appointments with top-rated doctors and specialists near you.</p>
            
            <div class="search-box-container">
                <div class="search-input-wrapper">
                    <svg class="search-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
                    <input type="text" placeholder="Search by doctor name" class="search-input">
                </div>
                <button class="search-btn">Search</button>
            </div>
        </div>
    </div>

    <!-- Doctors Grid Section -->
    <div class="max-w-7xl mx-auto px-4 py-12">
        <h2 class="text-2xl font-bold mb-8 text-slate-800">All Specialists</h2>
        
        <div class="doctors-list-grid">
            <% if (typeof doctors !== 'undefined' && doctors.length > 0) { %>
                <% doctors.forEach(function(doctor) { %>
                    <div class="doctor-grid-card">
                        <div class="doctor-card-padding">
                            <div class="doctor-card-header">
                                <div class="doctor-profile-flex">
                                    <div class="doctor-list-avatar <%= doctor.image %>">
                                        DR
                                    </div>
                                    <div>
                                        <h3 class="doctor-name-text"><%= doctor.name %></h3>
                                        <p class="doctor-role-text"><%= doctor.role %></p>
                                    </div>
                                </div>
                                <div class="rating-badge">
                                    <span class="star-icon">â˜…</span>
                                    <span class="rating-text"><%= doctor.rating %></span>
                                </div>
                            </div>
                            <button class="book-btn-full">
                                Book Appointment
                            </button>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No doctors found.</p>
            <% } %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>